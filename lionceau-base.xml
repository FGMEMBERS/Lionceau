<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM), Sebastien MARQUE (Instruments), Laurent HAYVEL (Texture)</author>
    <aircraft-version>0.2</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.75</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Lionceau/lionceau-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/Lionceau/Sounds/lionceau-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Lionceau/Models/lionceau.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <panel>
      <visibility archive="y">false</visibility>
    </panel>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <flaps>
      <setting> 0.00 </setting>
      <setting> 0.50 </setting>
      <setting> 1.00 </setting>
    </flaps>

    <help>
      <title>APM 20 Lionceau</title>
      <line>______________________________________________</line>
    </help>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>175</weight-lb>
      <max-lb>200</max-lb>
    </weight>

    <weight n="1">
      <name>Copilot</name>
      <weight-lb>0</weight-lb>
      <max-lb>200</max-lb>
    </weight>

    <weight n="2">
      <name>Bagages</name>
      <weight-lb>0</weight-lb>
      <max-lb>45</max-lb>
    </weight>

    <menubar include="Dialogs/lionceau-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine>
        <mixture archive="y"> 0.65 </mixture>
      </engine>
    </engines>
  </controls>

  <input>
    <keyboard include="Nasal/lionceau-keyboard.xml"/>
  </input>

  <nasal>
    <doors>
      <file>Aircraft/Lionceau/Nasal/doors.nas</file>
    </doors>
    <lionceau>
      <file>Aircraft/Lionceau/Nasal/lionceau.nas</file>
      <file>Aircraft/Lionceau/Nasal/instruments.nas</file>
      <file>Aircraft/Lionceau/Nasal/electrical.nas</file>
      <file>Aircraft/Lionceau/Nasal/action.nas</file>
      <file>Aircraft/Lionceau/Nasal/fluids.nas</file>
      <file>Aircraft/Lionceau/Nasal/liveries.nas</file>
      <file>Aircraft/Lionceau/Nasal/immat.nas</file>
      <file>Aircraft/Lionceau/Nasal/light.nas</file>
    </lionceau>
    <zkv500>
      <file>Aircraft/Instruments-3d/zkv500/ZKV500.nas</file>
    </zkv500>
  </nasal>

</PropertyList>
