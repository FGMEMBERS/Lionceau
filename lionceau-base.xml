<?xml version="1.0"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM), Sebastien MARQUE (Instruments), Pierre GEOFFROY (Engines), Laurent HAYVEL (Texture)</author>
    <aircraft-version>0.2</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.75</fuel-fraction>

    <flaps>
      <setting>0.00</setting>
      <setting>0.50</setting>
      <setting>1.00</setting>
    </flaps>

    <startup>
      <splash-texture>Aircraft/Lionceau/lionceau-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/Lionceau/Sounds/lionceau-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Lionceau/Models/lionceau.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <panel>
      <visibility archive="y">false</visibility>
    </panel>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
      </generic>
    </multiplay>

    <help>
      <title>APM 20 Lionceau</title>
      <line>______________________________________________</line>
    </help>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>175</weight-lb>
      <max-lb>200</max-lb>
    </weight>

    <weight n="1">
      <name>Copilot</name>
      <weight-lb>0</weight-lb>
      <max-lb>200</max-lb>
    </weight>

    <weight n="2">
      <name>Bagages</name>
      <weight-lb>0</weight-lb>
      <max-lb>45</max-lb>
    </weight>

    <menubar include="Dialogs/lionceau-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine>
        <mixture archive="y"> 0.65 </mixture>
      </engine>
    </engines>
  </controls>

  <input>
    <keyboard include="Nasal/lionceau-keyboard.xml"/>
  </input>

  <nasal>
    <lionceau>
      <file>Aircraft/Lionceau/Nasal/doors.nas</file>
      <file>Aircraft/Lionceau/Nasal/lionceau.nas</file>
      <file>Aircraft/Lionceau/Nasal/instruments.nas</file>
      <file>Aircraft/Lionceau/Nasal/electrical.nas</file>
      <file>Aircraft/Lionceau/Nasal/action.nas</file>
      <file>Aircraft/Lionceau/Nasal/fluids.nas</file>
      <file>Aircraft/Lionceau/Nasal/liveries.nas</file>
      <file>Aircraft/Lionceau/Nasal/immat.nas</file>
    </lionceau>
    <zkv500>
      <file>Aircraft/Instruments-3d/zkv500/ZKV500.nas</file>
    </zkv500>
  </nasal>

</PropertyList>
