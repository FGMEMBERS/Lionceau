  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- L'hélice -->
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.092 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.125 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <name>ProfondeurTrim</name>
    <object-name>profondeur</object-name>
    <object-name>trimprof</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ProfondeurTrim</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>11</factor>
    <center>
      <x-m> 3.108 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.021 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

 <!-- Gouverne de trim de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>trimprof</object-name>
    <property>/controls/flight/elevator-trim</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> -5 </dep></entry>
      <entry><ind>  0 </ind><dep>  0 </dep></entry>
      <entry><ind>  1 </ind><dep>  5 </dep></entry>
    </interpolation>
    <center>
      <x-m> 3.327 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.021 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>20</factor>
    <axis>
      <x1-m>  2.774 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m>  0.104 </z1-m>
      <x2-m>  2.953 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.185 </z2-m>
    </axis>
  </animation>

