    <center>
      <x-m> -2.210 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.047 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
